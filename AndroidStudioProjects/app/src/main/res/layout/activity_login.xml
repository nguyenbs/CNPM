<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d0cf">
    tools:context="com.example.ntc.demo.Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#006aff"
                    android:gravity="center"
                    android:text="Đăng nhập"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nhập tài khoản"
                    android:textSize="25dp"
                    android:background="#ffffff"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="25dp"
                    android:background="#ffffff"
                    android:inputType="textPassword"
                    android:text="Mật Khẩu"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                   >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quay Lại"
                        android:background="#fc5157"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnOnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đăng Nhập"
                        android:background="#54c647"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="------------------------- hoặc -------------------------"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đăng Ký"
                    android:background="#006aff"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/btnFogotPassWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quên Mật khẩu"
                    android:background="#9b8b39"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
